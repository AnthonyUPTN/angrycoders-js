<img class="film__poster" src="https://image.tmdb.org/t/p/original/{{poster_path}}" alt="{{title}}" width="240" />
      <div class="film__info-wrapper">
        <h2 class="film__name">{{title}}</h2>
        <div class="film__details">
          <ul class="film__details-list">
            <li class="film__details-item">
              <span class="film__details-name">Vote / Votes</span>
              <span class="film__details-rating"
                ><span class="film__details-rating1">{{vote_average}}</span>&nbsp;&nbsp;/&nbsp;
                <span class="film__details-rating2">{{vote_count}}</span></span
              >
            </li>
            <li class="film__details-item">
              <span class="film__details-name">Popularity</span>
              <span class="film__details-popularity">{{popularity}}</span>
            </li>
            <li class="film__details-item">
              <span class="film__details-name">Original Title</span>
              <span class="film__details-title">{{title}}</span>
            </li>
            <li class="film__details-item">
              <span class="film__details-name">Genre</span>
              <span class="film__details-genre">{{genre_ids}}</span>
            </li>
          </ul>
        </div>
        <h3 class="film__review-title">about</h3>
        <p class="film__review">{{overview}}</p>
        <div class="film__btn-wrapper">
          <button class="film__btn-watched button" type="button">add to Watched</button>
          <button class="film__btn-queue button" type="button">add to queue</button>
        </div>
      </div>